{
  "name": "server",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "check": "biome check ./src",
    "check:fix": "biome check --apply ./src",
    "format": "biome format ./src",
    "lint": "biome lint ./src",
    "migrate:init": "dotenv -e ../../.env -- pnpm dlx prisma migrate dev --name init",
    "migrate": "dotenv -e ../../.env -- pnpm dlx prisma migrate dev"
  },
  "dependencies": {
    "@hono/node-server": "^1.9.0",
    "@hono/zod-validator": "^0.2.1",
    "@prisma/client": "5.12.1",
    "@repo/schema": "workspace:*",
    "dotenv-cli": "^7.4.1",
    "hono": "^4.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/database": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.11.17",
    "esbuild": "^0.20.2",
    "prisma": "^5.12.1",
    "tsx": "^4.7.1",
    "typescript": "^5.2.2"
  }
}
